				android:layout_toRightOf="@id/imageView2s"
				android:layout_marginLeft="10dp"
				android:text="血压记录"
				android:textSize="20sp"/>
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignBottom="@id/imageView2s"
				android:layout_toRightOf="@id/imageView2s"
				android:layout_marginLeft="10dp"
