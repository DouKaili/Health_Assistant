<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/allFlipper"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

		<TextView 
			android:id="@+id/hide_game"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/bpmanager"
			android:textColor="#ffffff"
			android:background="#3CB1D8"
			android:gravity="center"
			android:textSize="23sp"/>   
		<TextView 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="本应用还处于开发中，欢迎提出宝贵意见"
			android:textColor="#ffffff"
			android:background="#3CB1D8"
			android:gravity="center"
			android:textSize="12sp"/>     
           
        <View 
			android:layout_width="fill_parent"
			android:layout_height="40dp" 
			android:background="@android:color/transparent"/>     
   
		<LinearLayout
			android:id="@+id/Layout1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/imageButton1"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:layout_weight="0.5"
				android:clickable="true"
				android:background="@android:color/transparent"
				android:src="@drawable/selector" 
				android:contentDescription="add data"/>
			<ImageView
				android:id="@+id/imageButton2"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:layout_weight="0.5"
				android:background="@android:color/transparent"
				android:clickable="true"
				android:src="@drawable/stats_selector"
				android:contentDescription="data record" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/Layout1s"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
			    android:layout_weight="0.5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="数据添加"
				android:gravity="center"
				android:textSize="18sp"
				android:background="@android:color/transparent"/>
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:text="数据记录"
				android:gravity="center"
				android:textSize="18sp"
				android:background="@android:color/transparent"/>
        </LinearLayout>
        <TextView 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:background="@android:color/transparent"
			android:textSize="12sp"/>    
		<LinearLayout
			android:id="@+id/Layout2"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/imageButton6"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:layout_weight="0.5"   
				android:background="@android:color/transparent"
				android:src="@drawable/about_selector" 
				android:clickable="true"
				android:contentDescription="Health News"/>

			<ImageView
				android:id="@+id/imageButton4"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:layout_weight="0.5"
				android:background="@android:color/transparent"
				android:src="@drawable/send_selector"
				android:clickable="true" 
				android:contentDescription="bluetooth"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/Layout2s"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:text="健康资讯"
				android:gravity="center"
				android:textSize="18sp"
				android:background="@android:color/transparent"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:text="心电采集"
				android:gravity="center"
				android:textSize="18sp"
				android:background="@android:color/transparent"/>
        </LinearLayout>
        <TextView 
			android:layout_width="fill_parent"
			android:layout_height="10dp" 
			android:background="@android:color/transparent"/>  
		<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">
		<View 
		       android:layout_width="fill_parent"
		       android:layout_height="0.1dp"
		       android:background="#88000000"/>
        </LinearLayout>
		<TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="最新数据" 
        android:textSize="15sp"
        android:textColor="#fe5864"/>     
       <LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
		<LinearLayout 
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:layout_weight="0.5" 
		   android:orientation="vertical"
		   android:paddingBottom="@dimen/activity_vertical_margin"
           android:paddingLeft="@dimen/activity_horizontal_margin"
           android:paddingRight="@dimen/activity_horizontal_margin"
           android:paddingTop="@dimen/activity_vertical_margin">
           <RelativeLayout 
           android:layout_width="wrap_content"
		   android:layout_height="wrap_content">
           <TextView 
             android:id="@+id/main_hbp1"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="高压：  "
		     android:layout_marginLeft="20dp"/> 
		   <TextView 
		     android:id="@+id/main_hbp"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="144"
		     android:layout_toRightOf="@id/main_hbp1"/>
		    <TextView 
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="mmHg"
		     android:layout_toRightOf="@id/main_hbp"/>     
           </RelativeLayout>
		   
		  <RelativeLayout 
           android:layout_width="wrap_content"
		   android:layout_height="wrap_content">
           <TextView 
             android:id="@+id/main_lbp1"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="低压：  "
		     android:layout_marginLeft="20dp"/> 
		   <TextView 
		     android:id="@+id/main_lbp"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="99"
		     android:layout_toRightOf="@id/main_lbp1"/>
		    <TextView 
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="mmHg"
		     android:layout_toRightOf="@id/main_lbp"/>     
           </RelativeLayout> 
           
		  <RelativeLayout 
           android:layout_width="wrap_content"
		   android:layout_height="wrap_content">
           <TextView 
             android:id="@+id/main_rt1"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="心率：  "
		     android:layout_marginLeft="20dp"/> 
		   <TextView 
		     android:id="@+id/main_rt"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="78"
		     android:layout_toRightOf="@id/main_rt1"/>
		    <TextView 
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="次/分"
		     android:layout_toRightOf="@id/main_rt"/>     
           </RelativeLayout> 
           
		  <RelativeLayout 
           android:layout_width="wrap_content"
		   android:layout_height="wrap_content">
           <TextView 
             android:id="@+id/main_bpcd1"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="血压状况：  "
		     android:layout_marginLeft="20dp"/> 
		   <TextView 
		     android:id="@+id/main_bpcd"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="正常"
		     android:layout_toRightOf="@id/main_bpcd1"/>
           </RelativeLayout> 
		</LinearLayout>
		<LinearLayout 
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:layout_weight="0.5" 
		   android:orientation="vertical"
		   android:paddingBottom="@dimen/activity_vertical_margin"
           android:paddingLeft="@dimen/activity_horizontal_margin"
           android:paddingRight="@dimen/activity_horizontal_margin"
           android:paddingTop="@dimen/activity_vertical_margin">
		  <RelativeLayout 
           android:layout_width="wrap_content"
		   android:layout_height="wrap_content">
           <TextView 
             android:id="@+id/main_wt1"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="体重：  "
		     android:layout_marginLeft="20dp"/> 
		   <TextView 
		     android:id="@+id/main_wt"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="65"
		     android:layout_toRightOf="@id/main_wt1"/>
		    <TextView 
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="kg"
		     android:layout_toRightOf="@id/main_wt"/>     
           </RelativeLayout>
		   
		  <RelativeLayout 
           android:layout_width="wrap_content"
		   android:layout_height="wrap_content">
           <TextView 
             android:id="@+id/main_ht1"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="身高：  "
		     android:layout_marginLeft="20dp"/> 
		   <TextView 
		     android:id="@+id/main_ht"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="175"
		     android:layout_toRightOf="@id/main_ht1"/>
		    <TextView 
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="cm"
		     android:layout_toRightOf="@id/main_ht"/>     
           </RelativeLayout> 
           
		  <RelativeLayout 
           android:layout_width="wrap_content"
		   android:layout_height="wrap_content">
           <TextView 
             android:id="@+id/main_bmi1"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="BMI ：  "
		     android:layout_marginLeft="20dp"/> 
		   <TextView 
		     android:id="@+id/main_bmi"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="20.55"
		     android:layout_toRightOf="@id/main_bmi1"/>    
           </RelativeLayout> 
           
		  <RelativeLayout 
           android:layout_width="wrap_content"
		   android:layout_height="wrap_content">
           <TextView 
             android:id="@+id/main_wtcd1"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="体重状况：  "
		     android:layout_marginLeft="20dp"/> 
		   <TextView 
		     android:id="@+id/main_wtcd"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:text="正常"
		     android:layout_toRightOf="@id/main_wtcd1"/>
           </RelativeLayout> 
           
		</LinearLayout>
		
		</LinearLayout>
         
            <Button 
					android:onClick="send_to_doctor"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:text="发送给医生"
					android:background="@drawable/re2_selector"
					android:textColor="#4db849"
				/>
	</LinearLayout>
</ViewFlipper>
