<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
   <LinearLayout
        android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
        android:layout_weight="1"   
        >       	
    <SurfaceView 
	  android:id="@+id/show" 
	  android:layout_width="fill_parent" 
	  android:layout_height="fill_parent" 
	  android:layout_weight="1"
	  />

    </LinearLayout>
         	   	
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"       
        >
       	<Button 
			android:text="连接" 
			android:id="@+id/Button03" 
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:onClick="onConnectButtonClicked">
		</Button>
       	<Button 
			android:text="数据" 
			android:id="@+id/sin" 
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:onClick="ondataButtonClicked">
<!-- 			这个原来是onConnectButtonClicked，应该写错了，不过由于之前已经定义了点击事件，所以似乎没什么影响 -->
		</Button>
		<Button 
			android:text="保存" 
			android:id="@+id/Button04" 
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:onClick="onSaveButtonClicked">
		</Button>
		<Button 
			android:text="清空" 
			android:id="@+id/Button05" 
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:onClick="onClearButtonClicked">
		</Button>
		<Button 
			android:text="读取" 
			android:id="@+id/Button06" 
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:onClick="onQuitButtonClicked">
		</Button>
    </LinearLayout>
</LinearLayout>