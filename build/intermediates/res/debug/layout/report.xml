<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:text="选择日志类型"
		android:textColor="#ffffff"
		android:background="#3CB1D8"
		android:gravity="center"
		android:textSize="23sp"/>
	<LinearLayout
		android:id="@+id/re_bpreport"
		android:clickable="true"
		android:background="@drawable/re2_selector"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
		<View 
			android:layout_width="fill_parent"
			android:layout_height="8dp" 
			android:background="@android:color/transparent"/>    
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<ImageView	
				android:id="@+id/imageView1ss"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_marginLeft="10dp"
				android:src="@drawable/heart_light" 
				android:contentDescription="bp log"/>
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignTop="@id/imageView1ss"
				android:layout_toRightOf="@id/imageView1ss"
				android:layout_marginLeft="10dp"
				android:text="血压日志"
				android:textSize="20sp"/>
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignBottom="@id/imageView1ss"
				android:layout_toRightOf="@id/imageView1ss"
				android:layout_marginLeft="10dp"
				android:text="查看您的血压历史记录"
				android:textColor="#66000000"
				android:textSize="15sp"/>
		</RelativeLayout>
		<TextView 
			android:layout_width="fill_parent"
			android:layout_height="4dp" 
			android:background="@android:color/transparent"/>    
	</LinearLayout>  
	<View 
		android:layout_width="fill_parent"
		android:layout_height="0.1dp"
		android:background="#88000000"/>
	<LinearLayout
		android:id="@+id/re_wgreport"
		android:clickable="true"
		android:background="@drawable/re2_selector"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
		<TextView 
			android:layout_width="fill_parent"
			android:layout_height="4dp" 
			android:background="@android:color/transparent"/>    
		<RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
			<ImageView
				android:id="@+id/imageView2ss"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_marginLeft="10dp"
				android:src="@drawable/weight_light" 
				android:contentDescription="weight log"/>
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignTop="@id/imageView2ss"
				android:layout_toRightOf="@id/imageView2ss"
				android:layout_marginLeft="10dp"
				android:text="体重日志"
				android:textSize="20sp"/>
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignBottom="@id/imageView2ss"
				android:layout_toRightOf="@id/imageView2ss"
				android:layout_marginLeft="10dp"
				android:text="查看您的体重历史记录"
				android:textColor="#66000000"
				android:textSize="15sp"/>   
		</RelativeLayout>
		<TextView 
			android:layout_width="fill_parent"
			android:layout_height="4dp" 
			android:background="@android:color/transparent"/> 
	</LinearLayout>     
	<View 
		android:layout_width="fill_parent"
		android:layout_height="0.1dp"
		android:background="#88000000"/>
	<LinearLayout
		android:id="@+id/re_mdreport"
		android:clickable="true"
		android:background="@drawable/re2_selector"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
		<TextView 
			android:layout_width="fill_parent"
			android:layout_height="4dp" 
			android:background="@android:color/transparent"/>    
		<RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
			<ImageView
				android:id="@+id/imageView3ss"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_marginLeft="10dp"
				android:src="@drawable/med_light" 
				android:contentDescription="medicine log"/>
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignTop="@id/imageView3ss"
				android:layout_toRightOf="@id/imageView3ss"
				android:layout_marginLeft="10dp"
				android:text="药物日志"
				android:textSize="20sp"/>
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignBottom="@id/imageView3ss"
				android:layout_toRightOf="@id/imageView3ss"
				android:layout_marginLeft="10dp"
				android:text="查看您的用药历史记录"
				android:textColor="#66000000"
				android:textSize="15sp"/>
		</RelativeLayout>
		<TextView 
			android:layout_width="fill_parent"
			android:layout_height="4dp" 
			android:background="@android:color/transparent"/>   
	</LinearLayout>   
	<View 
		android:layout_width="fill_parent"
		android:layout_height="0.1dp"
		android:background="#88000000"/>
		<LinearLayout
			android:id="@+id/re_exreport"
            android:clickable="true"
            android:background="@drawable/re2_selector"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView 
				android:layout_width="fill_parent"
				android:layout_height="4dp" 
				android:background="@android:color/transparent"/>    
			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<ImageView
					android:id="@+id/imageView4ss"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_marginLeft="10dp"
					android:src="@drawable/exercise_light" 
					android:contentDescription="exercise log"/>
				<TextView 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignTop="@id/imageView4ss"
					android:layout_toRightOf="@id/imageView4ss"
					android:layout_marginLeft="10dp"
					android:text="运动日志"
					android:textSize="20sp"/>
				<TextView 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignBottom="@id/imageView4ss"
					android:layout_toRightOf="@id/imageView4ss"
					android:layout_marginLeft="10dp"
					android:text="查看您的运动历史记录"
					android:textColor="#66000000"
					android:textSize="15sp"/>
		</RelativeLayout>
		<TextView 
			android:layout_width="fill_parent"
			android:layout_height="4dp" 
			android:background="@android:color/transparent"/>  
	</LinearLayout>   
	<View 
		android:layout_width="fill_parent"
		android:layout_height="0.1dp"
		android:background="#88000000"/>
</LinearLayout>
